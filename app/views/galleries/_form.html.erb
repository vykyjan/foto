<%= form_for(@gallery) do |f| %>
  <% if @gallery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gallery.errors.count, "error") %> Tuto galerii se nepodařilo uložit</h2>

      <ul>
      <% @gallery.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	</br>
  <div class="field">
    <%= f.label :name, "Jméno" %>
    <%= f.text_field :name %>
  </div>
	</br>
  <button class="btn primary" type="submit"> Uložit</button>
	<%= link_to 'Zpět', galleries_path %>
<% end %>
